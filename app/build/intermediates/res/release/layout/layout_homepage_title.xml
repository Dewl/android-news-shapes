<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cover_photo_height"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding">

    <ImageView
        android:id="@+id/iv_home_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_photo_height"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/magazine_cover_sample" />

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/Blurry"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:text="HN: Người đàn ông bất ngờ nhảy từ tầng 6 xuống đất"
        android:textColor="@color/White"
        android:textSize="@dimen/magazine_title_size"
        android:textStyle="bold" />
</RelativeLayout><!-- From: file:/home/hkhoi/Documents/Projects/Android/News/app/src/main/res/layout/layout_homepage_title.xml -->